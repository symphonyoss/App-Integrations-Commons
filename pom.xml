    <profiles>
        <profile>
            <id>RPM</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <file>
                    <exists>./src/main/java</exists>
                </file>
                <property>
                    <name>build.rpm</name>
                    <value>true</value>
                </property>
            </activation>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <version>${rpm.plugin.version}</version>

                        <executions>
                            <execution>
                                <id>generate-rpm</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>rpm</goal>
                                </goals>
                            </execution>
                        </executions>

                        <configuration>
                            <distribution>${rpm.name.prefix}-${rpm.type}</distribution>
                            <name>${rpm.name}</name>
                            <group>${rpm.name.prefix}-${rpm.type}</group>
                            <version>${semantic.version}</version>
                            <release>${build.number}</release>
                            <needarch>x86_64</needarch>
                            <targetOS>linux</targetOS>
                            <autoRequires>false</autoRequires>
                            <repackJars>false</repackJars>

                            <requires>
                                <require>symphony-apps-base</require>
                            </requires>

                            <mappings>
                                <mapping>
                                    <directory>${rpm.deployment.folder}</directory>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>${rpm.deployment.filemode}</filemode>
                                    <username>${rpm.deployment.user}</username>
                                    <groupname>${rpm.deployment.user}</groupname>
                                    <sources>
                                        <source>
                                            <location>
                                                ${project.build.directory}/${project.build.finalName}.jar
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>
                            </mappings>
                            <postinstallScriptlet>
                                <script>
                                    if [ -d ${rpm.deployment.folder}/${project.build.finalName} ];
                                    then
                                    rm -rf ${rpm.deployment.folder}/${project.build.finalName}
                                    fi
                                </script>
                            </postinstallScriptlet>
                            <postremoveScriptlet>
                                <script>
                                    if [ -d ${rpm.deployment.folder}/${project.build.finalName} ];
                                    then
                                    rm -rf ${rpm.deployment.folder}/${project.build.finalName}
                                    fi
                                </script>
                            </postremoveScriptlet>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-artifacts</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>attach-artifact</goal>
                                </goals>
                                <configuration>
                                    <artifacts>
                                        <artifact>
                                            <file>
                                                ${project.build.directory}/rpm/${rpm.name}/RPMS/x86_64/${rpm.name}-${semantic.version}-${build.number}.x86_64.rpm
                                            </file>
                                            <type>rpm</type>
                                        </artifact>
                                    </artifacts>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

